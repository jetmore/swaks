auto: INTERACT '%SWAKS% --dump AUTH --to user@host1.nodns.test.swaks.net --from recip@host1.nodns.test.swaks.net --helo hserver --server host1.nodns.test.swaks.net --auth --auth-user CMDLINE-USER' 'Password:' 'PROMPT-PASSWORD'
